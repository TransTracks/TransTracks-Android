<resources>

    <style name="PinkAppTheme" parent="BaseAppTheme">
        <item name="colorPrimaryLight">@color/pinkColorPrimaryLight</item>
        <item name="colorPrimary">@color/pinkColorPrimary</item>
        <item name="colorPrimaryDark">@color/pinkColorPrimaryDark</item>
        <item name="colorAccent">@color/pinkColorAccent</item>
    </style>

    <style name="BlueAppTheme" parent="BaseAppTheme">
        <item name="colorPrimaryLight">@color/blueColorPrimaryLight</item>
        <item name="colorPrimary">@color/blueColorPrimary</item>
        <item name="colorPrimaryDark">@color/blueColorPrimaryDark</item>
        <item name="colorAccent">@color/blueColorAccent</item>
    </style>

    <style name="PurpleAppTheme" parent="BaseAppTheme">
        <item name="colorPrimaryLight">@color/purpleColorPrimaryLight</item>
        <item name="colorPrimary">@color/purpleColorPrimary</item>
        <item name="colorPrimaryDark">@color/purpleColorPrimaryDark</item>
        <item name="colorAccent">@color/purpleColorAccent</item>
    </style>

    <style name="GreenAppTheme" parent="BaseAppTheme">
        <item name="colorPrimaryLight">@color/greenColorPrimaryLight</item>
        <item name="colorPrimary">@color/greenColorPrimary</item>
        <item name="colorPrimaryDark">@color/greenColorPrimaryDark</item>
        <item name="colorAccent">@color/greenColorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close_black_24dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:fontFamily">@font/arvo</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>
